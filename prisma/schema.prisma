// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id @default(cuid())
  email           String     @unique
  pagSeguroId     Int        @unique
  taxaNova        String
  taxaAntiga      String
  primeiraTaxa    String
  restauradoTaxas Boolean    @default(false)
  revendedorId    String?    // torna o revendedorId opcional
  revendedor      Revendedor? @relation(fields: [revendedorId], references: [id])
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model Revendedor {
  id       String @id @default(cuid())
  nome     String
  email    String @unique
  password String
  users    User[]
}
